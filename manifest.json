{
 "manifest_version": 3,
 "name": "Scroll Alert",
 "version": "1.0",
 "description": "Detects if the user has been scrolling for more than 15 consecutive seconds.",
 "permissions": ["scripting", "storage"],
 "action": {
   "default_popup": "./popup/popup.html",   
   "default_icon": {
     "16": "./assets/icon16.png",
     "48": "./assets/icon48.png",
     "128": "./assets/icon128.png"
   }
 },
 "host_permissions": [
   "*://*/*"
 ],
 "icons": {
   "16": "./assets/icon16.png",
   "48": "./assets/icon48.png",
   "128": "./assets/icon128.png"
 }
}